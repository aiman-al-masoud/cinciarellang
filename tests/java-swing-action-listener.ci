import JButton from "javax.swing.JButton";
import JFrame from "javax.swing.JFrame";


Handler = class{

	__init__ = \button, print->{
		this.print = print;
		this.events = [];
	}

	handle = \ref e->{
	
		e.getSource().setText("capra");		
	
	}

}


f = JFrame();
b = JButton("ciao");
handler = Handler(b, print);
b.addActionListener( handler.handle  );
f.add(b);
f.setSize(200, 200);
f.show();


c1 = b.getText() == 'ciao';
b.doClick();
c2 = b.getText() == 'capra';
f.dispose();
c1 && c2;











